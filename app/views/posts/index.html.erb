<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Posts</h1>
  
  <table>
    <thead>
      <tr>
        <th>Body</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.body %></td>
          <td><%= post.created_at.to_date %></td>
          <td><%= link_to 'Show', user_post_path(user_id: @user.id, id: post.id) %></td>
          <td><%= link_to 'Edit', edit_user_post_path(user_id: @user.id, id: post.id) %></td>
          <td><%= link_to 'Destroy', user_post_path(user_id: @user.id, id: post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Post', new_user_post_path(user_id: @user.id) %>

</div>